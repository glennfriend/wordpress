{
    "name": "my/wordpress",
    "description": "The Wordpress.",
    "keywords": [],
    "type": "project",
    "require": {
        "johnpbloch/wordpress": "5.0.3"
    },
    "require-dev": {
    },
    "autoload": {
        "classmap": [],
        "psr-4": {},
        "files": []
    },
    "autoload-dev": {
        "psr-4": {}
    },
    "extra": {
        "installer-paths": {
            "content/themes/{$name}/":    ["type:wordpress-theme"],
            "content/plugins/{$name}/":   ["type:wordpress-plugin"],
            "content/mu-plugins/{$name}": ["type:wordpress-muplugin"]
        },
        "wordpress-install-dir": "wordpress"
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p content/themes",
            "mkdir -p content/plugins",
            "mkdir -p content/mu-plugins",
            "mkdir -p content/uploads",
            "cp -n wordpress/wp-config-sample.php ./wp-config.php",
            "find ./wordpress/ -type d -exec chmod 0775 {} \\;",
            "find ./wordpress/ -type f -exec chmod 0664 {} \\;",
            "mv ./wordpress/wp-content /tmp/"
        ]
    }
}
